[Unit]
Description=Hornpub Strategy Runner
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/opt/hornpub-runner
Environment=SUPABASE_URL=YOUR_URL
Environment=SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE
ExecStart=/usr/bin/node /opt/hornpub-runner/dist/index.js
Restart=always
RestartSec=2

# nice-to-have
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
